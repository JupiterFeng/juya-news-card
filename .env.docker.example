# Copy this file to `.env.docker` before `docker compose up --build`.

# Minimal required config (must configure these 3 items)
LLM_API_KEY=your-api-key-here
LLM_API_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4o-mini

# Quick local experience in Docker (single-machine demo):
# - keep unauthenticated writes enabled
# - do NOT expose this directly to public internet
ALLOW_UNAUTHENTICATED_WRITE=true

# Safer production profile (recommended when public):
# API_BEARER_TOKEN=change-me
# ALLOW_UNAUTHENTICATED_WRITE=false
# CORS_ALLOW_ORIGIN=https://your-frontend-domain.example

# Optional
# RATE_LIMIT_WINDOW_MS=60000
# RATE_LIMIT_MAX_RENDER=60
# RATE_LIMIT_MAX_GENERATE=30
# RENDER_API_HOST=0.0.0.0
# RENDER_API_PORT=8080
